{
  "name": "Parcel",
  "type": "object",
  "properties": {
    "tracking_number": {
      "type": "string",
      "description": "Unique tracking identifier"
    },
    "store_name": {
      "type": "string",
      "description": "Name of the store/retailer"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "processing",
        "shipped",
        "in_transit",
        "out_for_delivery",
        "delivered",
        "cancelled"
      ],
      "default": "pending"
    },
    "origin_address": {
      "type": "string",
      "description": "Pickup address"
    },
    "destination_address": {
      "type": "string",
      "description": "Delivery address"
    },
    "recipient_name": {
      "type": "string"
    },
    "recipient_phone": {
      "type": "string"
    },
    "estimated_delivery": {
      "type": "string",
      "format": "date"
    },
    "actual_delivery": {
      "type": "string",
      "format": "date"
    },
    "total_weight": {
      "type": "number",
      "description": "Weight in kg"
    },
    "total_value": {
      "type": "number",
      "description": "Total value in USD"
    },
    "shipping_cost": {
      "type": "number",
      "description": "Shipping cost in USD"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "product_name": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          },
          "price": {
            "type": "number"
          },
          "weight": {
            "type": "number"
          },
          "dimensions": {
            "type": "string"
          }
        }
      }
    },
    "notes": {
      "type": "string"
    }
  },
  "required": [
    "tracking_number"
  ]
}